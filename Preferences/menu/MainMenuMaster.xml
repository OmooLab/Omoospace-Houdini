<?xml version="1.0" encoding="UTF-8"?>
<mainMenu>
  <menuBar>
    <subMenu id="omoospace">
      <label>Omoospace</label>

      <titleItem><label>Current Path Mode:</label></titleItem>
      <scriptItem>
        <labelExpression>
<![CDATA[
from omoospace_houdini import OmoospaceConfig
path_mode = OmoospaceConfig().path_mode
return f"{path_mode.upper()} (Press to Change)"
]]>
        </labelExpression>
        <scriptCode>
<![CDATA[
import hou
from omoospace_houdini import OmoospaceConfig
OmoospaceConfig().switch_path_mode()
hou.hipFile.save()
]]>
        </scriptCode>
      </scriptItem>
      <separatorItem></separatorItem>

      <titleItem><label>Omoospace Root ($JOB):</label></titleItem>
      <scriptItem>
        <labelExpression>hou.getenv('JOB')</labelExpression>
        <scriptCode>
<![CDATA[
from omoospace import reveal_in_explorer
reveal_in_explorer(hou.getenv('JOB'))
]]>
        </scriptCode>
      </scriptItem>
      <separatorItem></separatorItem>

      <titleItem><label>Subspace Route ($ROUTE):</label></titleItem>
      <scriptItem>
        <labelExpression>hou.getenv('ROUTE')</labelExpression>
        <scriptCode>
<![CDATA[
import pyperclip
pyperclip.copy(hou.getenv('ROUTE'))
print(f"Copy to Clipboard: {hou.getenv('ROUTE')}")
]]>
        </scriptCode>
      </scriptItem>
       <separatorItem></separatorItem>

      <scriptItem>
        <label>Update Subspace Route</label>
        <scriptCode>
<![CDATA[
from omoospace_houdini import on_hip_save
on_hip_save()
]]>
        </scriptCode>
      </scriptItem>

    </subMenu>
  </menuBar>
</mainMenu>